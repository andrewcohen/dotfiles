macos-titlebar-style = hidden
theme = Catppuccin Macchiato

font-family = Maple Mono
# Maple mono features
# cv01 - @ symbol
# cv04 - cursive L
font-feature = +cv01, +cv04
font-size = 15
font-thicken = true
#adjust-cell-height = 2

window-padding-x = 10
window-padding-y = 10

mouse-hide-while-typing = true

# keybind = global:cmd+/=toggle_quick_terminal
# quick-terminal-animation-duration = 0.1

# Sends Ctrl-b N for tmux next window
keybind = cmd+]=text:\x02n
# Sends Ctrl-b P for tmux previous window
keybind = cmd+[=text:\x02p
# Sends Ctrl-b S for tmux show sessions
keybind = cmd+;=text:\x02s
